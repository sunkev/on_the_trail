<%= simple_form_for(@notification, html: { class: 'form-horizontal' }) do |f| %>
    <%= f.input :first_name, input_html: {value: current_user.first_name} %>
    <%= f.input :last_name, input_html: {value: current_user.last_name} %>
    <%= f.input :phone %>
    <%= f.input :email, input_html: {value: current_user.email} %>
    <%= f.input :contact_email %>
    <%= f.input :contact_phone %>
    <%= f.input :carrier, collection: @carrier_collection,
        label_method: Proc.new {|carrier| carrier[:label]},
        value_method: Proc.new {|carrier| carrier[:value]} %>
    <%= f.input :message %>
    <%= f.input :latitude, input_html: {value: @lat}  %>
    <%= f.input :longitude, input_html: {value: @lng}  %>
    <%= f.button :submit %>
<% end %>
